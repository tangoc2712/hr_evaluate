<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employ_list_view" model="ir.ui.view">
        <field name="name">employ.list.view</field>
        <field name="model">employ.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="employ_list_form" model="ir.ui.view">
        <field name="name">employ.list.form</field>
        <field name="model">employ.profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_employ_profile" model="ir.actions.act_window">
        <field name="name">Employ Profile</field>
        <field name="res_model">employ.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="employ_root_menu" name="Employ" web_icon="employ,static/description/icon.png"/>
    <menuitem id="employ_sub_menu" parent="employ_root_menu"
              name="Employ Profile"/>
    <menuitem id="employ_profile_menu" name="Employ"
              action="action_employ_profile"
              parent="employ_sub_menu"/>
</odoo>