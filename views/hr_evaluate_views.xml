<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_evaluate_view_tree" model="ir.ui.view">
            <field name="name">hr.evaluate.tree</field>
            <field name="model">hr.evaluate</field>
            <field name="arch" type="xml">
                <tree string="Evaluate">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="hr_evaluate_view_search" model="ir.ui.view">
            <field name="name">hr.evaluate.search</field>
            <field name="model">hr.evaluate</field>
            <field name="arch" type="xml">
                <search string="Default Group By">
                    <filter name="group_state" string="State" icon="terp-partner" context="{'group_by':'state'}"/>
                </search>
            </field>
        </record>

        <record id="hr_evaluate_view_form" model="ir.ui.view">
            <field name="name">hr.evaluate.form</field>
            <field name="model">hr.evaluate</field>
            <field name="arch" type="xml">
                <form string="Evaluate">
                    <header>
                        <button id="button_confirm" name="user_confirm" string="Confirm" type="object"
                                class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pm,dl,approve"
                               options="{'clickable': 1}"/>
                    </header>
                    <sheet class="o_sheet" style='max-width:1800px; display:flex'>
                        <div class="title">
                            <h1 style="text-align:center;">PHIẾU ĐÁNH GIÁ THỬ VIỆC</h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="job_id"/>
                                <field name="user_id"/>
                                <field name="start_date"/>
                            </group>
                        </group>
                        <group>
                            <div style="font-weight: bold;">I. ĐÁNH GIÁ KẾT QUẢ THỰC HIỆN CÔNG VIỆC
                            </div>
                        </group>
                        <group>
                            <div style="font-weight: bold;">II. ĐÁNH GIÁ VỀ KỶ LUẬT LAO ĐỘNG, KỸ NĂNG
                                LÀM VIỆC
                            </div>
                        </group>
                        <group>
                            <div style="font-weight: bold;">A. Ý kiến, kiến nghị</div>
                        </group>
                        <field name="petition"/>
                        <group>
                            <div style="font-weight: bold;">B. Ý kiến nhận xét</div>
                        </group>
                        <field name="remark"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        # action
        <record id="action_hr_evaluate" model="ir.actions.act_window">
            <field name="name">Evaluate</field>
            <field name="res_model">hr.evaluate</field>
            <field name="view_mode">tree,form,activity,kanban</field>
            <field name="domain">[('employee_id', '!=', False)]</field>
            <field name="context">{'search_default_group_state': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new evaluate
                </p>
            </field>
        </record>

        #menu
        <menuitem
                id="menu_hr_evaluate"
                name="Evaluate"
                parent="hr.menu_hr_root"
                groups="group_hr_evaluate_user,group_pm_user,group_dl_user"
                sequence="3"/>
        <menuitem
                id="menu_hr_evaluate_user"
                name="Evaluate"
                parent="menu_hr_evaluate"
                action="action_hr_evaluate"
                groups="group_hr_evaluate_user,group_pm_user,group_dl_user"
                sequence="4"/>



        # ==> auto generate contract name
        <record id="unique_sequence_id" model="ir.sequence">
            <field name="name">Sequence Name</field>
            <field name="code">sequence.code</field>
            <field name="active">TRUE</field>
            <field name="prefix">OC-Corp-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">17</field>
        </record>
    </data>
</odoo>