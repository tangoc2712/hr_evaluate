<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="email_template_evaluate_em_to_dl" model="mail.template">
        <field name="name">Evaluate: Send to DL</field>
        <field name="model_id" ref="model_hr_evaluate"/>
        <field name="email_from">${(object.env.user.login) |safe}</field>
        <field name="email_to">${object.employee_id.work_email}</field>
        <field name="subject"> Yêu cầu đánh giá thử việc nhân viên</field>
        <field name="body_html" type="html">
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif;
                                font-size: 13px; color: #222222; background-color: #ffffff; word-break: break-word;">
                <p>Dear Anh/Chị,</p>
                <br/>
            </div>
        </field>
    </record>

</odoo>

